<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#CA939191"/>
            <corners android:topLeftRadius="20dp"
                 android:radius="20dp" />
        </shape>
    </item>

    <item
        android:left="0dp"
        android:right="0dp"
        android:top="3dp"
        android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#CAE4E4E4"  />
            <corners android:topLeftRadius="20dp" android:radius="20dp" />
        </shape>
    </item>
</layer-list>