<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/thu"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bocanhan"
    android:gravity="center"
    android:orientation="horizontal">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardBackgroundColor="#ffffff"
            app:cardCornerRadius="50dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true"
            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/imganhkho1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/sanpham"
                tools:ignore="ContentDescription" />

        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView28"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:text="Mã hàng hóa:" />

            <TextView
                android:id="@+id/tvMahh1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView32"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="Số lượng:" />

            <TextView
                android:id="@+id/ma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/btnXoahanghoa"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/bacham"
                android:tint="#F64545"
                tools:ignore="UseAppTint" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView33"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Loại hàng:" />

            <TextView
                android:id="@+id/tvTensp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView34"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="Giá tiền:" />

            <TextView
                android:id="@+id/tvGiatien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16sp" />

            <!--            <ImageView-->
            <!--                android:id="@+id/imgsua"-->
            <!--                android:layout_width="20dp"-->
            <!--                android:layout_height="20dp"-->
            <!--                android:layout_marginTop="6dp"-->
            <!--                android:layout_marginRight="4dp"-->
            <!--                android:src="@drawable/sua"-->
            <!--                android:tint="#2196F3"-->
            <!--                tools:ignore="UseAppTint" />-->

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvTrangthai5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:gravity="right"
                android:text="Trạng thái" />
        </LinearLayout>

        <!--        <ImageView-->
        <!--            android:id="@+id/imgChitiet"-->
        <!--            android:layout_width="15dp"-->
        <!--            android:layout_height="20dp"-->
