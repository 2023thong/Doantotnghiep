<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".admin.ItemThongTinDU">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/icmanhmenu"
                android:src="@drawable/themhinhanh"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                tools:ignore="UseAppTint" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/btnanhmenu"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:layout_marginStart="160dp"
                android:background="@drawable/bothemanh"
                android:text="thêm ảnh"
                android:textColor="@color/black" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">
    <TextView
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:text="Mã đồ uống: "
        android:gravity="center"
        android:textSize="25dp"/>
        <EditText
            android:id="@+id/edMaDU"
            android:background="@drawable/boedit"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:text="cf02"
            android:textSize="25dp"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">
        <TextView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="Tên đồ uống: "
            android:gravity="center"
            android:textSize="25dp"/>
        <EditText
            android:id="@+id/edTenDU"
            android:background="@drawable/boedit"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:text="Bạc sỉu"
            android:textSize="25dp"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">
        <TextView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="Giá đồ uống: "
            android:gravity="center"
            android:textSize="25dp"/>
        <EditText
            android:id="@+id/edGiaDU"
            android:background="@drawable/boedit"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:text="25000"
            android:textSize="25dp"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">
        <TextView
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:text="Tên loại hàng: "
            android:gravity="center"
            android:textSize="25dp"/>
        <Spinner
            android:id="@+id/SpTenLh"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:textSize="25dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
        <Button
            android:id="@+id/btnSuaDU"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:backgroundTint="#313839"
            android:text="Sửa"
            android:textSize="20dp"
            android:layout_marginStart="20dp"/>
        <Button
            android:id="@+id/btnXoaDU"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:backgroundTint="#3C3C3B"
            android:text="Xóa"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"/>
        <Button
            android:id="@+id/btnBack"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:text="Thoát"
            android:backgroundTint="#3A393A"
            android:textSize="20dp"
            android:layout_marginStart="20dp"/>
    </LinearLayout>
</LinearLayout>
</LinearLayout>