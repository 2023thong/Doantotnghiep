<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".admin.ItemThongTinDU">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">
    <TextView
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:text="Mã đồ uống: "
        android:gravity="center"
        android:textSize="25dp"/>
        <EditText
            android:id="@+id/edMaDU"
            android:background="@drawable/boedit"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:text="cf02"
            android:textSize="25dp"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">
        <TextView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="Tên đồ uống: "
            android:gravity="center"
            android:textSize="25dp"/>
        <EditText
            android:id="@+id/edTenDU"
            android:background="@drawable/boedit"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:text="Bạc sỉu"
            android:textSize="25dp"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">
        <TextView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="Giá đồ uống: "
            android:gravity="center"
            android:textSize="25dp"/>
        <EditText
            android:id="@+id/edGiaDU"
            android:background="@drawable/boedit"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:text="25000"
            android:textSize="25dp"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
        <Button
            android:id="@+id/btnSuaDU"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:backgroundTint="#319CAA"
            android:text="Sửa"
            android:textSize="20dp"
            android:layout_marginStart="70dp"/>
        <Button
            android:id="@+id/btnBack"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:text="Thoát"
            android:backgroundTint="#E3155B"
            android:textSize="20dp"
            android:layout_marginStart="40dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <Button
            android:id="@+id/btnXoaDU"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:backgroundTint="#D6C847"
            android:text="Xóa"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:layout_marginStart="150dp"/>
    </LinearLayout>
</LinearLayout>