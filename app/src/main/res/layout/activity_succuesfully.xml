<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SuccuesfullyActivity"

    android:orientation="vertical">
    <ImageView
        android:layout_marginTop="70dp"
        android:layout_width="match_parent"
        android:layout_height="310dp"
        android:src="@drawable/image_removebg_preview"/>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thay đổi mật khẩu"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_gravity="center"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="Mật khẩu của bạn đã được thay đổi thành công"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:enabled="false"
        />
    <Button
        android:id="@+id/btn_backTrangChu"
        android:layout_marginTop="90dp"
        android:layout_width="330dp"
        android:layout_height="60dp"
        android:textSize="16sp"
        android:backgroundTint="#C97E3A"
        android:text="Trở về trang chủ"
        android:layout_gravity="center"/>

</LinearLayout>