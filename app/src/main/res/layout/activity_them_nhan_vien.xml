<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E6DA72"
    tools:context=".admin.ThemNhanVien">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#ED8361">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/back"
            android:layout_margin="15dp"
            android:onClick="backra"/>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Thêm nhân viên"
            android:textSize="35sp"
            android:textStyle="bold|italic" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Mã NV:"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:textSize="20dp"/>
            <EditText
                android:id="@+id/edtMaNv"
                android:layout_margin="5dp"
                android:layout_width="300dp"
                android:layout_gravity="center"
                android:background="@drawable/khungedt"
                android:layout_height="50dp"
                android:hint="Mã nhân viên"
                android:paddingStart="20dp" />
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Tên NV:"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:textSize="20dp"/>
            <EditText
                android:id="@+id/edtTenNv"
                android:layout_margin="5dp"
                android:layout_width="300dp"
                android:layout_gravity="center"
                android:background="@drawable/khungedt"
                android:layout_height="50dp"
                android:hint="Tên nhân viên"
                android:paddingStart="20dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Tên ĐN:"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:textSize="20dp"/>
            <EditText
                android:id="@+id/edtTenDnnv"
                android:layout_margin="5dp"
                android:layout_width="300dp"
                android:layout_gravity="center"
                android:background="@drawable/khungedt"
                android:layout_height="50dp"
                android:hint="Tên Đăng nhập"
                android:paddingStart="20dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Pass:"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:textSize="20dp"/>
            <EditText
                android:id="@+id/edtMatkhau"
                android:layout_margin="5dp"
                android:layout_width="300dp"
                android:layout_gravity="center"
                android:background="@drawable/khungedt"
                android:layout_height="50dp"
                android:hint="Mật khẩu"
                android:paddingStart="20dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Phone:"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:textSize="20dp"/>
            <EditText
                android:id="@+id/edtSdt"
                android:layout_margin="5dp"
                android:layout_width="300dp"
                android:layout_gravity="center"
                android:background="@drawable/khungedt"
                android:layout_height="50dp"
                android:hint="Số điện thoại"
                android:paddingStart="20dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Adress:"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:textSize="20dp"/>
            <EditText
                android:id="@+id/edtDiachi"
                android:layout_margin="5dp"
                android:layout_width="300dp"
                android:layout_gravity="center"
                android:background="@drawable/khungedt"
                android:layout_height="50dp"
                android:hint="Địa chỉ"
                android:paddingStart="20dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Chức vụ:"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:textSize="20dp"/>
            <EditText
                android:id="@+id/edtChucvu"
                android:layout_margin="5dp"
                android:layout_width="300dp"
                android:layout_gravity="center"
                android:background="@drawable/khungedt"
                android:layout_height="50dp"
                android:hint="Chức vụ"
                android:paddingStart="20dp" />
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
            <Button
                android:id="@+id/btnThemNV"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:text="Thêm"
                android:backgroundTint="#ED5252"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_gravity="center"/>
            <Button
                android:id="@+id/btnXemNV"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:text="Danh sách"
                android:backgroundTint="#19C6DC"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_gravity="center"/>
        </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>