<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.ItemDoUong">
    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="240dp"
        android:background="@drawable/boquanly"
        android:padding="10dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="30dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="15dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imgDoUong"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:src="@drawable/cf"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvMaMn"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:text="01"
                    android:textStyle="bold|italic"/>
            <TextView
                android:id="@+id/tvTenLh"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Trà sữa"
                android:textSize="25dp"
                android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvGiatien"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="giá: 35.000 đ"
                android:gravity="center"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="right">
                <ImageView
                    android:id="@+id/icEdit"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/edit"
                    android:layout_marginEnd="10dp"/>

                <ImageView
                    android:id="@+id/icDelete"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/delete" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>