<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.ItemDoUong">
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="130dp"
        android:background="@drawable/boquanly"
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_margin="20dp">
        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imgnuoc"
                android:layout_width="100dp"
                android:layout_height="95dp"
                android:src="@drawable/nuoc1"/>
            <TextView
                android:id="@+id/tvMaMn"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="01"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:gravity="center"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvTenLh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Trà sữa"
                    android:textSize="25dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvGiatien"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="giá: 35.000 đ"
                android:gravity="center"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:gravity="right">
                <ImageView
                    android:id="@+id/icEdit"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/edit"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="10dp"/>

                <ImageView
                    android:id="@+id/icDelete"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/delete" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>