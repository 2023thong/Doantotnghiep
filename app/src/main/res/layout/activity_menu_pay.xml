<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".nhanvien.Menu_payFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <FrameLayout
            android:id="@+id/frameLayoutcht"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/ic_background_pay"
                android:padding="30dp"
                tools:ignore="ContentDescription,MissingConstraints" />






             </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvMabn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="Menu:"
                android:gravity="center"
                android:textSize="20dp"
                android:textStyle="bold"
                tools:ignore="InvalidId" />
            <View
                android:layout_width="60dp"
                android:background="#CA191717"
                android:layout_gravity="center"
                android:layout_height="1dp"/>

        </LinearLayout>

        <ListView
            android:id="@+id/lv_listoder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"

            android:layout_marginBottom="65dp"
            android:background="#00111111"
            android:gravity="center"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:ignore="MissingConstraints" />
            </LinearLayout>



</LinearLayout>