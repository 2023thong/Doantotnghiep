<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".admin.QuanLyHoaDon">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ED8361">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_back"
            android:layout_margin="15dp"
            android:onClick="backHoaDon"/>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Quản lý hóa đơn"
            android:textSize="25sp"
            android:textStyle="bold|italic"
            android:layout_marginStart="50dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="Lịch sử thanh toán"
            android:textStyle="italic"
            android:textSize="15dp"
            android:padding="10dp"/>
        <TextView
            android:padding="10dp"
            android:id="@+id/tvTongTien"
            android:textColor="#057887"
            android:textStyle="italic"
            android:textSize="15dp"
            android:layout_width="200dp"
            android:layout_height="match_parent"/>
        <TextView
            android:padding="10dp"
            android:id="@+id/tvTongBill"
            android:textColor="#DD1E1E"
            android:textStyle="italic"
            android:textSize="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <ListView
        android:id="@+id/lvQLHD"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:background="#00111111"
        android:divider="@color/white"
        android:dividerHeight="8dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:ignore="MissingConstraints"/>


</LinearLayout>