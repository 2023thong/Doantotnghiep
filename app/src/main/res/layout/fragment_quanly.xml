<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.QuanlyFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:background="@drawable/boquanly">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/user"
                android:layout_margin="20dp"/>
            <TextView
                android:id="@+id/tvQLNV"
                android:textColor="#100F0F"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="25dp"
                android:textSize="25sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed-light"
                android:text="Quản lý nhân viên"
                android:layout_gravity="center"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:background="@drawable/boquanly">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/drink"
                android:layout_margin="20dp"/>
            <TextView
                android:id="@+id/tvDSDoUong"
                android:textColor="#0E0B0B"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="25dp"
                android:textSize="25sp"
                android:textStyle="bold"
                android:text="Danh sách đồ uống"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-condensed-light"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:background="@drawable/boquanly">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/hoadon"
                android:layout_margin="20dp"/>
            <TextView
                android:id="@+id/tvQLHD"
                android:textColor="#191111"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="25dp"
                android:textSize="25sp"
                android:textStyle="bold"
                android:text="Quản lý hóa đơn"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-condensed-light"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:background="@drawable/boquanly">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/doanhthu"
                android:layout_margin="20dp"/>

            <TextView
                android:id="@+id/tvQLDT"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginStart="25dp"
                android:text="Quản lý doanh thu"
                android:textColor="#130404"
                android:textSize="25sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed-light"/>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>