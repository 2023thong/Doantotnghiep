<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".nhanvien.DanhsachFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/con1menu"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtMaban"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mã số bàn: 01"
                android:textColor="#000000"
                android:textSize="25dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/txtSoban"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Số bàn: 01"
                android:textColor="#000000"
                android:textSize="15dp"
                />
            <TextView
                android:id="@+id/txtThoigian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thời gian"
                android:textColor="#000000"
                android:textSize="15dp"
                />

            <Button
                android:id="@+id/btnSuaa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#65B668"
                android:gravity="center"
                android:text="Sửa" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>