<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/fragment_unpaid"

    android:layout_height="match_parent"
    tools:context=".nhanvien.UnpaidFragment">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_menubr"
                android:orientation="vertical"
                tools:ignore="MissingConstraints">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:text="Coffee Folly:"
                    android:gravity="center"
                    android:textSize="30dp"
                    android:textStyle="bold"
                 />
                <View
                    android:layout_width="180dp"
                    android:background="#CA191717"
                    android:layout_gravity="center"
                    android:layout_height="1dp"/>

            <ListView
                android:id="@+id/lv_unpaid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"

                android:layout_marginBottom="65dp"
                android:background="#00111111"
                android:gravity="center"
                android:orientation="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:ignore="MissingConstraints"

                />
            </LinearLayout>



    </androidx.cardview.widget.CardView>



