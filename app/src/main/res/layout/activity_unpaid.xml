<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Unpaid">
    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/ic_background_pay"
            android:padding="30dp"
            tools:ignore="ContentDescription,MissingConstraints" />

        <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="555dp"
        android:baselineAligned="false"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/btn_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#A89E9E"
            android:text="Chưa thanh toán"
            android:textColor="@color/black"
            tools:ignore="ButtonStyle,HardcodedText,MissingConstraints"

            tools:layout_editor_absoluteX="6dp"
            tools:layout_editor_absoluteY="154dp" />

        <Button
            android:id="@+id/btn_paid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:backgroundTint="#D9D9D9"
            android:fontFamily="sans-serif-light"
            android:text="Đã thanh toán"
            android:textColor="@color/black"
            tools:ignore="ButtonStyle,HardcodedText,MissingConstraints,RtlHardcoded"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="206dp"
            />
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="170dp"
            android:layout_marginBottom="65dp"
            android:gravity="center"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/background_click"

            android:orientation="vertical"
            tools:ignore="MissingConstraints">

        </LinearLayout>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>